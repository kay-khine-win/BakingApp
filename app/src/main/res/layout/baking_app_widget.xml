<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView
        android:id="@+id/widget_baking_image"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/baking" />

        <Button
            android:id="@+id/widget_ingre_button"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/example_appwidget_preview"
            android:text="Show Ingredients of Last seen Recipe" />
    </LinearLayout>

    <TextView android:id="@+id/ingredient_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>